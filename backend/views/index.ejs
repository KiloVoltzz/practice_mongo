<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Access</title>
  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <!-- Add Inter font for a clean, modern look -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    /* Custom styles to set the font and background */
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f3f4f6; /* A soft gray background */
    }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">

  <!-- Main container for the forms -->
  <div class="w-full max-w-md">

    <!-- Create Account Form Section (Initially visible) -->
    <div id="create-account-container" class="p-6 bg-white rounded-xl shadow-2xl sm:p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Create an Account</h1>
        <p class="text-gray-500 mt-2">Join us and start your journey</p>
      </div>

      <form id="signup-form" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
          <div class="mt-1">
            <input
              id="name"
              name="name"
              type="text"
              required
              placeholder="John Doe"
              class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors"
            />
          </div>
        </div>

        <div>
          <label for="email-create" class="block text-sm font-medium text-gray-700">Email Address</label>
          <div class="mt-1">
            <input
              id="email-create"
              name="email"
              type="email"
              autocomplete="email"
              required
              placeholder="you@example.com"
              class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors"
            />
          </div>
        </div>

        <div>
          <label for="password-create" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1">
            <input
              id="password-create"
              name="password"
              type="password"
              autocomplete="new-password"
              required
              placeholder="••••••••"
              class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors"
            />
          </div>
        </div>
        <div>
          <button
            type="submit"
            class="w-full py-3 px-4 bg-indigo-600 text-white rounded-lg font-semibold shadow-md hover:bg-indigo-700 transition-colors"
          >
            Sign up
          </button>
        </div>
      </form>

      <!-- Link to switch to the Login page -->
      <p class="mt-6 text-center text-sm text-gray-500">
        Already have an account?
        <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500" onclick="showForm('login')">
          Sign in
        </a>
      </p>
    </div>

    <!-- Login Form Section (Initially hidden) -->
    <div id="login-container" class="p-6 bg-white rounded-xl shadow-2xl sm:p-8" style="display: none;">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Sign in</h1>
        <p class="text-gray-500 mt-2">Welcome back!</p>
      </div>

      <form class="space-y-6">
        <div>
          <label for="email-login" class="block text-sm font-medium text-gray-700">Email Address</label>
          <div class="mt-1">
            <input
              id="email-login"
              name="email"
              type="email"
              autocomplete="email"
              required
              placeholder="you@example.com"
              class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors"
            />
          </div>
        </div>

        <div>
          <label for="password-login" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1">
            <input
              id="password-login"
              name="password"
              type="password"
              autocomplete="current-password"
              required
              placeholder="••••••••"
              class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors"
            />
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="w-full py-3 px-4 bg-indigo-600 text-white rounded-lg font-semibold shadow-md hover:bg-indigo-700 transition-colors"
          >
            Sign in
          </button>
        </div>
      </form>

      <!-- Link to switch back to the Create Account page -->
      <p class="mt-6 text-center text-sm text-gray-500">
        Don't have an account?
        <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500" onclick="showForm('create-account')">
          Sign up
        </a>
      </p>
    </div>

  </div>

  <script>
    /**
     * Toggles the visibility of the forms based on the formType.
     * @param {string} formType - The type of form to show ('create-account' or 'login').
     */
    function showForm(formType) {
      const createAccountContainer = document.getElementById('create-account-container');
      const loginContainer = document.getElementById('login-container');

      if (formType === 'login') {
        createAccountContainer.style.display = 'none';
        loginContainer.style.display = 'block';
      } else if (formType === 'create-account') {
        createAccountContainer.style.display = 'block';
        loginContainer.style.display = 'none';
      }
    }

    // Get the sign-up form and add an event listener
    const signupForm = document.getElementById('signup-form');
    signupForm.addEventListener('submit', async (e) => {
      // Prevent the default form submission
      e.preventDefault();

      // Get the form data
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      // Prepare the payload
      const payload = {
        name: data.name,
        email: data.email,
        password: data.password
      };
      
      try {
        // Send a POST request to the backend
        const response = await fetch('/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(payload),
        });

        // Check if the response was successful
        if (response.ok) {
          const result = await response.json();
          console.log('User created successfully:', result);
          alert('Account created successfully!');
          // Optionally, redirect to the login page or a success page
          showForm('login');
        } else {
          const errorText = await response.text();
          console.error('Failed to create account:', errorText);
          alert(`Failed to create account: ${errorText}`);
        }
      } catch (error) {
        console.error('Error during account creation:', error);
        alert('An error occurred. Please try again later.');
      }
    });
  </script>

</body>
</html>
